      50% { content: var(--crane1a); transform: translateY(-5px) scaleX(-1); }
      75% { content: var(--crane1b); transform: translateY(5px) scaleX(-1); }
      100% { content: var(--crane1a); transform: translateY(-5px) scaleX(-1); }
