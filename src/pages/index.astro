      0% { content: var(--crane1b); transform: translateY(5px); }
      50% { content: var(--crane1a); transform: translateY(-5px); }
      75% { content: var(--crane1b); transform: translateY(5px); }
      100% { content: var(--crane1a); transform: translateY(-5px); }
    }

    .craneflipped {
      width: 10%;
      animation: flap-flipped 1s infinite alternate;
    }

